
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read, create and update access to the forms collection.
    // Deletes are disallowed for safety.
    // For a production app, you would want to secure this further,
    // likely by checking if a user is authenticated.
    match /forms/{formId} {
      allow read, create, update: if true;
      allow delete: if false;
    }
  }
}
